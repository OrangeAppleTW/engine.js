extends ./layout/layout.jade

block content
  .example-tags
    ul
      li All
      li Animated
      li Physic
      li Sound
      li Drawing
      li Control
      li Random
      li Game
      li UI
  .examples
    h1 Examples
    .example(tag="Physic Animated")
      img(src="bump.png")
      a.example-code.js-example-code(code-path='../test/examples/bump.js') 落地彈起動畫
    .example(tag="Physic Animated")
      img(src="bump-1.png")
      a.example-code.js-example-code(code-path='../test/examples/bump-1.js') 落地彈起動畫(不科學)
    .example(tag="Animated")
      img(src="shake.png")
      a.example-code.js-example-code(code-path='../test/examples/shake.js') 加速抖動
    .example(tag="Sound")
      img(src="sound.png")
      a.example-code.js-example-code(code-path='../test/examples/sound.js') 音效
    .example(tag="Animated Control")
      img(src="arrow.png")
      a.example-code.js-example-code(code-path='../test/examples/arrow.js') 方向鍵控制
    .example(tag="Animated Control")
      img(src="cursor.png")
      a.example-code.js-example-code(code-path='../test/examples/cursor.js') 跟著滑鼠移動
    .example(tag="Animated Control")
      img(src="LRControl.png")
      a.example-code.js-example-code(code-path='../test/examples/LRControl.js') 左右控制
    .example(tag="Random Game")
      img(src="pss.png")
      a.example-code.js-example-code(code-path='../test/examples/pss.js') 猜拳
    .example(tag="Game")
      img(src="bullet.png")
      a.example-code.js-example-code(code-path='../test/examples/bullet.js') 發射子彈
    .example(tag="UI")
      img(src="ui.png")
      a.example-code.js-example-code(code-path='../test/examples/ui.js') 使用者介面
    .example(tag="Control Sound Game")
      img(src="drag.png")
      a.example-code.js-example-code(code-path='../test/examples/drag.js') 拖曳
    .example(tag="Control Game")
      img(src="aim.png")
      a.example-code.js-example-code(code-path='../test/examples/aim.js') 準星射敵人
    .example(tag="Control Game")
      img(src="tank.png")
      a.example-code.js-example-code(code-path='../test/examples/tank.js') 碰到就輸了
    .example(tag="Game Drawing")
      img(src="reel.png")
      a.example-code.js-example-code(code-path='../test/examples/reel.js') 橫向捲軸

  .popup.js-popup#editor
    .popup-shadow
    .popup-content
      .stage
        textarea#editor-textarea(name='')
        iframe#sandbox(src='../test/sandbox.html', frameborder='0', scrolling="no")
        button.btn.close.js-close
          i.fa.fa-times
        button.btn.start.js-start Run
        button.btn.stop.js-stop Stop
  script(src="js/examples.js")