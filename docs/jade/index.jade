extends ./layout/layout.jade

block content
  .homepage
    span.example-code.js-example-code(code-path='../test/examples/games/flappybird.js',style="display:none;") 範例程式
    .popup.js-popup.active#editor
      .popup-content
        .stage
          textarea#editor-textarea(name='')
          iframe#sandbox(src='../test/sandbox.html', frameborder='0', scrolling="no")
          button.btn.start.js-start Run
          button.btn.stop.js-stop Stop
  .animations
    img#koding(src='koding.png')
    img#flappy(src='flappy.png')
    img#snake_head(src='snake.png')
    img#snake_body(src='snake.png')
    img#food(src='food.png')